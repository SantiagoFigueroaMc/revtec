<h1>Clients</h1>

<div id="clients">
  <ul>
    <% @clients.each do |client| %>
      <li class="card">
        <%= render client %>
        <p>
          <%= link_to "Show this client", client %>
        </p>
      </li>
    <% end %>
  </ul>
</div>

